{
  "name": "skills-vscode",
  "displayName": "Skills Manager",
  "description": "Manage agent skills from VSCode - Install, update, and discover skills for your AI coding assistants",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "skills",
    "agents",
    "claude",
    "cursor",
    "ai",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "resources/icon.svg",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skills-sidebar",
          "title": "Skills",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "skills-sidebar": [
        {
          "id": "skillsWebView",
          "type": "webview",
          "name": "Skills Manager"
        }
      ]
    },
    "commands": [
      {
        "command": "skills.refresh",
        "title": "Skills: Refresh",
        "icon": "$(refresh)",
        "category": "Skills"
      },
      {
        "command": "skills.search",
        "title": "Skills: Search Marketplace",
        "icon": "$(search)",
        "category": "Skills"
      },
      {
        "command": "skills.installFromURI",
        "title": "Skills: Install from URL...",
        "category": "Skills"
      },
      {
        "command": "skills.clearCache",
        "title": "Skills: Clear Cache",
        "category": "Skills"
      }
    ],
    "configuration": {
      "title": "Skills Manager",
      "properties": {
        "skills.apiUrls": {
          "type": "array",
          "default": [
            {
              "url": "https://skills.sh/api/search",
              "enabled": true,
              "name": "Skills.sh",
              "priority": 100
            }
          ],
          "description": "API URLs for the skills marketplace"
        },
        "skills.defaultAgents": {
          "type": "array",
          "default": [
            "claude-code"
          ],
          "items": {
            "type": "string",
            "enum": [
              "claude-code",
              "cursor",
              "cline"
            ]
          },
          "description": "Default agents to install skills to"
        },
        "skills.defaultScope": {
          "type": "string",
          "enum": [
            "project",
            "global"
          ],
          "default": "global",
          "description": "Default installation scope (project or global)"
        },
        "skills.cacheMaxSize": {
          "type": "number",
          "default": 52428800,
          "description": "Maximum cache size in bytes (default: 50MB)"
        },
        "skills.cacheExpiryDays": {
          "type": "number",
          "default": 7,
          "description": "Cache expiry time in days"
        },
        "skills.skipInstallPrompts": {
          "type": "boolean",
          "default": false,
          "description": "Skip prompts when installing skills - use default agents and scope directly"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "cd webview && npm run build",
    "dev-webview": "cd webview && npm run dev",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.32.3"
  }
}
